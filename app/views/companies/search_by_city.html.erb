<% if @companies.present? %>
  <table class="table table-bordered table-hover table-striped", class: "btn btn-primary">
  	<tr>     
  		<th>Company Name</th>
    	<th>Post Name</th>
        <th>No. of Vacancy</th>
        <th>Technology</th>
        <th>Eligibility</th>
        <th>key Skills</th>
        <th>Location</th>
    	<th colspan:'3'></th>
    	</tr>
    <% @companies.each do |company| %>
      	<% if company.vacancies.count > 0 %>
	        <% company.vacancies.each do |vacancy| %>
	          <tr>
	          	<td><%= company.name%> </td>
	            <td><%= vacancy.name %></td>
	            <td><%= vacancy.number_of_vacancy%> </td>
	            <td><%= vacancy.technology%> </td>
	            <td><%= vacancy.eligibility%> </td>
	            <td><%= vacancy.key_skills%> </td>
	            <td><%= vacancy.company.city%>(<%= vacancy.company.state%>)</td>
	          </tr>
	    	<% end %>
    	<% else %>
    		<tr>
      			<td colspan="2">No vacancies found for this company.  Click the 'New Picture' button to create a new picture.</td>
    		</tr>
  		<% end %>
  	<% end %>	
    </table>
<% else %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>
<%= link_to 'Back', companies_path, class: "btn btn-default" %>
