

<% if current_user.has_role? :admin %>
<h3> Company Details</h3>

<%= link_to 'New Company', new_company_path, class: "btn btn-primary"%>

<hr>

<table class="table table-bordered table-hover ", class: "btn btn-primary">
    	<tr>
    		<th>Name</th>
            <th>Address</th>
            <th>Contact no</th>
            <th>Email</th>
            <th>Technology</th>
            <th>City</th>
            <th>State</th>
    		<th colspan:'3'></th>
    	</tr>
    <% @companies.each do |company|%>
        <tr>
         	<td><%= company.name %></td>
            <td><%= company.address %></td>
            <td><%= company.contactno %></td>
            <td><%= company.email %></td>
            <td><%= company.technology %></td>
            <td><%= company.city %></td>
            <td><%= company.state %></td>
         	<td><%= link_to 'Show', company_path(company), class: "btn btn-default"  %></td>
         	<td><%= link_to 'Edit', edit_company_path(company), class: "btn btn-default"  %></td>
         	<td><%= link_to 'Delete', company_path(company),
         							method: :delete,
         							data: { confirm: 'Are you sure?'}, class: "btn btn-danger"  %></td>
         </tr>
    <% end %>

</table>
<% else %>
        <!--<a href="#" id="show_whatever">Show Whatever</a>
        <div id="whatever" class="hidden">..Hello.</div>-->

        <p><%= link_to 'view your profile',user_path(current_user),class:"btn btn-default"%> <br><br>
</p>
       <p> <%=link_to "Search by Technology", "#", id: "post-link"%>

        <%=link_to "Search by City", "#", id: "post-link1" %></p>


        <%= form_tag(vacancies_recent_path, :method => "get", id: "new-post") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search by Technology",required: true %>
            <%= submit_tag "Search", class: "btn btn-primary"  %>
        <% end %>

    
        <%= form_tag(companies_search_by_city_path, :method => "get", id: "new-post1") do %>
            <p><%= text_field_tag :search, params[:search], placeholder: "Search by City",required: true %> </p>
            <p><%= submit_tag "Search", class: "btn btn-primary"  %></p>
        <% end %>

<% end %>
    
